---
import Base from "./base.astro";

const { frontmatter } = Astro.props;

const title = frontmatter.title || "Liveboot.org";
const noindex = frontmatter.noindex || false;
---

<Base title={title} noindex={noindex}>
    <slot />
</Base>

<style is:global>
    * {
        text-align: left;
    }

    h1 {
        font-weight: 800;
        font-size: 40px;
        text-align: center;
    }

    h2 {
        font-weight: 600;
        font-size: 30px;
    }

    h1,
    h2,
    p {
        margin: 0.5rem;
    }
</style>

---
import "../../styles/tailwind.css";

const { href = "/", primary = false } = Astro.props;

const external = href.startsWith("http");

let tailwind =
    "px-4 py-3 rounded-xl shadow-2xl font-semibold transition ease-linear ";

if (primary) {
    tailwind +=
        "bg-indigo-500/50 border border-indigo-800 hover:bg-indigo-500/40";
} else {
    tailwind += "bg-white/5 border border-white/10 hover:bg-indigo-900/30";
}
---

{
    (external && (
        <a href={href} target="_blank" rel="noopener" class={tailwind}>
            <slot />
        </a>
    )) || (
        <a href={href} class={tailwind}>
            <slot />
        </a>
    )
}

---
import "../../styles/global.css";

const { href = "/", primary = false } = Astro.props;

const external = href.startsWith("http");

let tailwind =
    "px-4 py-3 rounded-3xl shadow-2xl font-semibold motion-safe:transition ease-linear ";

if (primary) {
    tailwind +=
        // "bg-indigo-500/50 border border-indigo-800 hover:bg-indigo-500/40";
        "bg-gradient-to-br from-indigo-500/50 to-indigo-500/40 border border-indigo-800 hover:from-indigo-500/40 hover:to-indigo-500/20";
} else {
    tailwind += "bg-white/5 border border-white/10 hover:bg-indigo-900/30";
}
---

{
    external ? (
        <a href={href} target="_blank" rel="noopener" class={tailwind}>
            <slot />
        </a>
    ) : (
        <a href={href} class={tailwind} data-astro-prefetch>
            <slot />
        </a>
    )
}

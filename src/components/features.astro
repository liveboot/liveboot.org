---
import "../styles/tailwind.css";
import Card from "./elements/card.astro";

import Shipping from "../../public/assets/shipping-fast.svg";
import Check from "../../public/assets/check-circle.svg";
import Plus from "../../public/assets/plus.svg";
import Shield from "../../public/assets/shield-alt.svg";
import Archive from "../../public/assets/archive.svg";
import Layers from "../../public/assets/layers.svg";
---

<section id="features">
    <h3 class="text-2xl m-8 mt-20">Why Liveboot</h3>
    <div class="grid grid-cols-3 gap-4">
        <Card
            title="Modern & Fast"
            content="RAM-only live session. Fast boots, fast tools, zero cruft."
        >
            <Shipping class="h-4 w-4" />
        </Card>

        <Card
            title="NixOS & Reproducible"
            content="Declarative builds for predictable, verifiable releases."
        >
            <Check class="h-4 w-4" />
        </Card>

        <Card
            title="UI/UX Friendly"
            content="Thoughtful defaults and polished interfaces for common rescue jobs."
        >
            <Plus class="h-4 w-4" />
        </Card>

        <Card
            title="Secure by Default"
            content="Least-privilege, signed artifacts, and transparent build pipelines."
        >
            <Shield class="h-4 w-4" />
        </Card>

        <Card
            title="Tools that Matter"
            content="Disk cloning, data rescue, Windows registry editor, and more out of the box."
        >
            <Archive class="h-4 w-4" />
        </Card>

        <Card
            title="Community-Driven"
            content="Open-source, transparent and welcoming contributions."
        >
            <Layers class="h-4 w-4" />
        </Card>
    </div>
</section>

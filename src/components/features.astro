---
import "../styles/global.css";
import Card from "./elements/card.astro";

const xy = "h-5 w-5";

import Container from "../icons/container-1312-svgrepo-com.svg";
import Diamond from "../icons/diamond-767-svgrepo-com.svg";
import FileBoard from "../icons/fileboard-done-1584-svgrepo-com.svg";
import Lightning from "../icons/lightning-1262-svgrepo-com.svg";
import Lock from "../icons/lock-open-round-708-svgrepo-com.svg";
import Script from "../icons/script-1604-svgrepo-com.svg";
---

<section id="features">
    <h2 class="text-2xl m-8 mt-20">Why Liveboot</h2>
    <div class="grid grid-cols-3">
        <Card
            title="Modern & Fast"
            content="RAM-only live session. Fast boots, fast tools, zero cruft."
        >
            <Lightning class={xy} />
        </Card>

        <Card
            title="NixOS & Reproducible"
            content="Declarative builds for predictable, verifiable releases."
        >
            <FileBoard class={xy} />
        </Card>

        <Card
            title="UI/UX Friendly"
            content="Thoughtful defaults and polished interfaces for common rescue jobs."
        >
            <Diamond class={xy} />
        </Card>

        <Card
            title="Secure by Default"
            content="Least-privilege, signed artifacts, and transparent build pipelines."
        >
            <Lock class={xy} />
        </Card>

        <Card
            title="Tools that Matter"
            content="Disk cloning, data rescue, Windows registry editor, and more out of the box."
        >
            <Script class={xy} />
        </Card>

        <Card
            title="Community-Driven"
            content="Open-source, transparent and welcoming contributions."
        >
            <Container class={xy} />
        </Card>
    </div>
</section>

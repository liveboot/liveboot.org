---
import "../styles/global.css";
---

<section id="install">
    <div class="installer">
        <div class="command-field">
            <input
                id="install-cmd"
                type="text"
                value="COMING SOON"
                readonly
            />
            <button class="copy-btn" id="copy-btn">Copy</button>
            <div class="copy-toast" id="copy-toast">Copied</div>
        </div>
    </div>
    <div class="quick-links">
        <a class="btn secondary" href="/docs">Read the docs</a>
        <a
            class="btn primary"
            href="https://github.com/liveboot"
            target="_blank"
            rel="noopener">Contribute on GitHub</a
        >
    </div>
</section>

<style>
    .installer {
        display: flex;
        justify-content: center;
        margin-top: 22px;
    }

    .command-field {
        position: relative;
        flex: 1 1 680px;
        max-width: 880px;
    }

    .command-field input {
        width: 100%;
        padding: 16px 104px 16px 18px;
        border-radius: 14px;
        background: var(--card);
        border: 1px solid rgba(255, 255, 255, 0.2);
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
            "Liberation Mono", "Courier New", monospace;
        font-size: 14px;
        color: var(--ink);
    }

    .copy-btn {
        position: absolute;
        right: 8px;
        top: 8px;
        bottom: 8px;
        padding: 0 14px;
        border-radius: 12px;
        border: none;
        background: var(--hi);
        color: #0f172a;
        font-weight: 700;
        cursor: pointer;
    }

    .copy-toast {
        position: absolute;
        right: 16px;
        top: -28px;
        background: var(--accent);
        color: #0f172a;
        font-size: 12px;
        padding: 4px 8px;
        border-radius: 8px;
        opacity: 0;
        transform: translateY(-6px);
        pointer-events: none;
        transition:
            opacity 0.2s ease,
            transform 0.2s ease;
    }

    .copy-toast.show {
        opacity: 1;
        transform: translateY(0);
    }

    .quick-links {
        display: flex;
        gap: 12px;
        justify-content: center;
        margin-top: 18px;
        flex-wrap: wrap;
    }

    .section {
        padding: 42px 0;
    }

    .section h3 {
        font-size: 24px;
        margin: 0 0 14px;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
    }
</style>
